{
  "name": "rapid-environment",
  "version": "0.0.1",
  "description": "Rapid JavaScript development environment",
  "main": "bin/www",
  "scripts": {
    "start": "run-p application eslint:watch stylint:watch puglint:watch",
    "start:prod": "cross-env NODE_ENV=production npm run application:prod",
    "application": "nodemon bin/www --exec babel-node --color",
    "application:prod": "babel-node bin/www --color",
    "eslint": "eslint *.js client admin api storage/index.js --color",
    "eslint:watch": "chokidar --initial --silent \"*.js\" \"client/**/*.js\" \"admin/**/*.js\" \"api/**/*.js\" \"storage/index.js\" -c \"npm run eslint\"",
    "stylint": "stylint client admin --color",
    "stylint:watch": "chokidar --initial --silent \"client/**/*.styl\" \"admin/**/*.styl\" -c \"npm run stylint\"",
    "puglint": "pug-lint client admin",
    "puglint:watch": "chokidar --initial --silent \"client/**/*.pug\" \"admin/**/*.pug\" -c \"npm run puglint\"",
    "share": "run-p application localtunnel",
    "localtunnel": "lt --port 3000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuotron/rapid-environment.git"
  },
  "keywords": [
    "mvc",
    "feature-based",
    "web-framework",
    "starter-kit",
    "boilerplate",
    "express",
    "rapid",
    "REST",
    "API"
  ],
  "author": "Nuotron <hello@nuotron.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuotron/rapid-environment/issues"
  },
  "homepage": "https://github.com/nuotron/rapid-environment#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.2.0",
    "debug": "^3.2.6",
    "express": "^4.16.4",
    "express-subdomain": "^1.0.5",
    "lodash": "^4.17.11",
    "mongoose": "^5.3.9",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.1.3",
    "pug": "^2.0.3",
    "rapid-error-handler": "0.0.1",
    "serve-favicon": "^2.5.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "webpack": "^3.12.0"
  },
  "dependencies": {
    "browser-sync": "^2.26.3",
    "chokidar-cli": "^1.2.1",
    "eslint": "^4.19.1",
    "kouto-swiss": "^1.1.0",
    "localtunnel": "^1.9.1",
    "nodemon": "^1.18.5",
    "pug-lint": "^2.5.0",
    "pug-lint-config-clock": "^2.0.0",
    "stylint": "^1.5.9"
  }
}
