{
  "name": "rapid-environment",
  "version": "0.0.1",
  "description": "Rapid JavaScript development environment",
  "main": "scripts/server.js",
  "scripts": {
    "prestart": "npm-run-all --parallel message security",
    "message": "babel-node scripts/message --color",
    "security": "nsp check --color",
    "start": "npm-run-all --parallel server eslint:watch",
    "server": "nodemon scripts/server --exec babel-node --color",
    "eslint": "esw scripts --color",
    "eslint:watch": "npm run eslint -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuotrons/RapidKit.git"
  },
  "author": "Nuotron <hello@nuotron.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuotrons/RapidKit/issues"
  },
  "homepage": "https://github.com/nuotrons/RapidKit#readme",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chalk": "^2.3.0",
    "eslint": "^4.16.0",
    "eslint-watch": "^3.1.3",
    "express": "^4.16.2",
    "nodemon": "^1.14.11",
    "npm-run-all": "^4.1.2",
    "nsp": "^3.1.0",
    "pug": "^2.0.0-rc.4"
  }
}
